{
  "name": "locatorjs-extension",
  "version": "1.3.1",
  "description": "LocatorJS Chrome Extension - option-click to code (ReactJS)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/infi-pc/locatorjs-extension.git"
  },
  "scripts": {
    "build": "node utils/build.js",
    "build:firefox": "TARGET_BROWSER=firefox node utils/build.js",
    "lint": "eslint src --ext .ts,.tsx",
    "dev": "node utils/webserver.js",
    "dev:firefox": "TARGET_BROWSER=firefox node utils/webserver.js",
    "start:firefox": "web-ext run --source-dir ./build/production_firefox",
    "pack:firefox": "web-ext build --source-dir ./build/production_firefox --artifacts-dir ./build/artifacts_firefox",
    "pack:chrome": "cd ./build/production_chrome && zip -r ../../build/chrome.zip .",
    "prettier": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,scss,md}'"
  },
  "dependencies": {
    "@hope-ui/solid": "^0.6.7",
    "@amirrezadev1378/shared": "workspace:^",
    "@amirrezadev1378/runtime": "workspace:^",
    "@amirrezadev1378/react-devtools-hook": "workspace:^",
    "@stitches/core": "^1.2.8",
    "@tailwindcss/forms": "^0.5.4",
    "@types/semver": "^7.5.0",
    "postcss": "^8.4.26",
    "postcss-loader": "^7.3.3",
    "postcss-preset-env": "^9.0.0",
    "posthog-js": "^1.23.0",
    "raw-loader": "^4.0.2",
    "semver": "^7.5.4",
    "solid-icons": "^1.0.11",
    "solid-js": "^1.7.8",
    "solid-transition-group": "^0.2.2"
  },
  "devDependencies": {
    "@amirrezadev1378/babel-jsx": "workspace:^",
    "@babel/core": "^7.22.5",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.22.15",
    "@babel/preset-typescript": "^7.22.15",
    "@types/chrome": "^0.0.238",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^9.1.2",
    "babel-preset-solid": "^1.7.7",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.43.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "file-loader": "^6.2.0",
    "fs-extra": "^11.1.1",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "sass-loader": "^13.3.2",
    "source-map-loader": "^4.0.1",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.2",
    "terser-webpack-plugin": "^5.3.9",
    "ts-loader": "^9.4.3",
    "typescript": "^5",
    "web-ext": "^7.1.1",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
